<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:paddingRight="5sp"
	    android:paddingLeft="5sp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">	       

    <CheckBox
        android:id="@+id/earpiece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Audio through earpiece"/>

    <CheckBox
        android:id="@+id/proximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Use proximity sensor"/>

    <CheckBox
        android:id="@+id/equalizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Volume boost"/>
    
	<!-- <ScrollView 
	    android:id="@+id/equalizer_scroll"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">  -->
	
	<LinearLayout
	    android:id="@+id/equalizer_inside"
	  	android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">	       
	    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
		android:id="@+id/boost_value"
        android:layout_width="50sp"
        android:layout_marginLeft="5sp"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="Boost: 100%"/>
<SeekBar
    android:id="@+id/boost"
    android:layout_width="0dip"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:layout_marginLeft="00dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"
    android:max="10000"
    />
</LinearLayout>
	  <TextView
	      android:id="@+id/warn"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="Warning: More than 30% may damage speakers/hearing."/>  	    
	    
	</LinearLayout>
	    
	<!--  </ScrollView>  -->    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
	  <TextView
	      android:id="@+id/ad"
	      android:layout_width="220sp"
	      android:layout_height="wrap_content"
	      android:paddingLeft="5sp"
	      android:paddingRight="5sp"
	      android:paddingTop="10sp"
	      android:paddingBottom="10sp"
	      android:textColor="#0000FF"
	      android:background="#B0B0B0"
	      android:text="Tap here for more Ï‰-Centauri apps, including the popular ScreenDim dimmer."
		/>
	  </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="right"
        android:orientation="horizontal"
        >
    	  <Button 
    	      android:id="@+id/more"
    	      android:text="More..."
    	      android:layout_width="wrap_content"
    	      android:layout_height="wrap_content"
    	      android:onClick="optionsClick"/>
    	      </LinearLayout>   	    

</LinearLayout>